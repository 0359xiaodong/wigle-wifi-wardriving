<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollview"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
	android:id="@+id/linearlayout" 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView android:id="@+id/speech_text"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/speech_text" />
        
<!-- run, new, queue, miles, time, battery -->
<CheckBox android:id="@+id/speech_run"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/speech_run" />
<CheckBox android:id="@+id/speech_new_wifi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/speech_new_wifi" />
<CheckBox android:id="@+id/speech_new_cell"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/speech_new_cell" />
<CheckBox android:id="@+id/speech_queue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/speech_queue" />
<CheckBox android:id="@+id/speech_miles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/speech_miles" />
<CheckBox android:id="@+id/speech_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/speech_time" />
<CheckBox android:id="@+id/speech_battery"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/speech_battery" />
<LinearLayout
	android:id="@+id/horizontalLine"
	android:layout_width="fill_parent"
	android:layout_height="2dip"
	android:background="#A07070"
	/>         
<CheckBox android:id="@+id/speech_ssid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/speech_ssid" />

</LinearLayout>
</ScrollView>